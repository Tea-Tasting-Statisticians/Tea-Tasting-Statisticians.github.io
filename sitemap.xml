---
layout: null
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% assign html_pages = site.html_pages | sort: "url" %}
  {% for page in html_pages %}
    {% assign page_url = page.url | replace: "index.html", "" %}
    {% if page.sitemap != false and page.robots != "noindex" and page_url != "/404.html" and page_url != "/404/" %}
  <url>
    <loc>{{ page_url | absolute_url | xml_escape }}</loc>
    {% if page.last_modified_at %}
    <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>
    {% elsif page.lastmod %}
    <lastmod>{{ page.lastmod | date_to_xmlschema }}</lastmod>
    {% elsif page.date %}
    <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
    {% endif %}
  </url>
    {% endif %}
  {% endfor %}
  {% for post in site.posts %}
    {% if post.sitemap != false and post.robots != "noindex" %}
  <url>
    <loc>{{ post.url | absolute_url | xml_escape }}</loc>
    {% if post.last_modified_at %}
    <lastmod>{{ post.last_modified_at | date_to_xmlschema }}</lastmod>
    {% elsif post.lastmod %}
    <lastmod>{{ post.lastmod | date_to_xmlschema }}</lastmod>
    {% else %}
    <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
    {% endif %}
  </url>
    {% endif %}
  {% endfor %}
</urlset>
